"""
Resource Guardian – Rescue Pod Demo
Focus: limited power + strict safety thermal envelope.
"""

import random
from resource_guardian.src.rg_orchestrator import ResourceGuardian
from thermal_control.src.thermal_controller import ThermalController
from thermal_control.src.thermal_profiles import get_thermal_profile
from power_management.src.power_controller import PowerController
from power_management.src.power_profiles import get_power_profile
from qnsf.src.qnsf_core import QNSFCore


def main():
    qnsf = QNSFCore()

    # In a rescue pod: more conservative
    thermal = ThermalController(**get_thermal_profile("safe"))
    power = PowerController(**get_power_profile("resilience"))

    guardian = ResourceGuardian(thermal_controller=thermal,
                                power_controller=power,
                                qnsf=qnsf)

    print("\n[SG RESOURCE GUARDIAN – RESCUE POD DEMO]\n")

    for step in range(1, 16):
        temp = random.uniform(35.0, 65.0)
        load = random.uniform(5.0, 18.0)  # small power system
        ambient = random.uniform(10.0, 40.0)
        workload_level = random.uniform(0.2, 0.8)

        snapshot = guardian.tick(
            current_temp=temp,
            current_load_kw=load,
            ambient_temp=ambient,
            workload_level=workload_level,
            context={"step": step, "mode": "rescue_pod"},
        )

        print(
            f"Step {step:02d} | Temp: {temp:5.2f}°C | Load: {load:5.2f}kW | "
            f"Mode: {snapshot['mode']:<10} | "
            f"Risk(QNSF): {snapshot['qnsf_risk_index']:.2f}"
        )

    print("\nDemo complete.\n")


if __name__ == "__main__":
    main()
